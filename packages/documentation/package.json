{
    "name": "@app/documentation",
    "version": "0.0.0",
    "description": "Documentation and types for the project",
    "type": "module",
    "main": "types.ts",
    "scripts": {
        "openapi:lint": "spectral lint openapi-spec.yaml --ruleset .spectral.yaml",
        "openapi:generate-types": "sta -p openapi-spec.yaml -n types.ts --silent --no-client",
        "build": "npm run openapi:lint && npm run openapi:generate-types"
    },
    "devDependencies": {
        "swagger-typescript-api": "^12.0.4",
        "@stoplight/spectral-cli": "^6.6.0"
    }
}
