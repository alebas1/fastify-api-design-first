{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "@app/shared-types": [
        "./packages/shared-types"
      ],
      "@app/api": [
        "./packages/api"
      ],
    }
  }
}
